<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#004"
    tools:context=".self_assess">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Question_n"
        android:textColor="#ffff"
        android:text=" HEALTH ASSES"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/questions_asses"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/questions"
            android:textStyle="bold"
            android:paddingStart="10sp"
            android:text="HAD A LUNCH?"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstsecondoption"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <TextView
            android:id="@+id/option_yes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_use_bio"
            android:paddingTop="18dp"
            android:textStyle="bold"
            android:text="YES"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/option_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_use_bio"
            android:paddingTop="18dp"
            android:text="NO"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#ffff" />


    </LinearLayout>



</LinearLayout>