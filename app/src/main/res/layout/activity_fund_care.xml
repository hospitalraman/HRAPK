<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical"
    tools:context=".fund_care">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROVIDE YOUR SUPPORT"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:paddingTop="10sp"
        android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONATE TO"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="40dp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:id="@+id/PM_fund"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PMNRF"
            android:textColor="#ff9933"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#138808"
            android:text="Prime Minister's National Relief Fund"
            android:layout_marginTop="120dp"
            android:gravity="center"/>





    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="40dp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:id="@+id/CM_fund"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CMPRF"
            android:textColor="#ff9933"
            android:gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#138808"
            android:text="Cheif Minister's National Relief Fund"
            android:layout_marginTop="120dp"
            android:gravity="center"/>


    </androidx.cardview.widget.CardView>



</LinearLayout>